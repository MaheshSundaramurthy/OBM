<div style="display:none;" id="profileMenu" class="arrow_box">

	<div id="shinnyUserInfos">

		{{#user_infos}}

		<div id="avatar">

			<img src="{{photo_url}}" alt="{{commonname}}"/>

		</div>

		<div id="infos">
			{{#commonname}}
				<p>{{commonname}}</p>
			{{/commonname}}

			{{^commonname}}
				<p>{{firstname}} {{lastname}}</p>
			{{/commonname}}

			<p>{{email}}</p>
			<p>{{profil_lang}} : {{profil}} ({{domain}})</p>

			<p class="buttons"><a href="../obm.php?action=logout" alt="{{l_logout}}" id="logout" class="button">{{l_logout}}</a></p>
		</div>

		{{/user_infos}}

	</div>

	<div id="settings">

		{{#user_settings}}

		<h3>{{name}}</h3>
		<ul id="section-{{section_name}}-items">

			{{#links}}

			<li>
				<a href="{{url}}" target="{{target}}" title="{{tooltip}}">
					{{#ico}} <img src="{{ico}}" alt="{{tooltip}}" class="ico"> {{/ico}}
					{{title}}
				</a>
			</li>

			{{/links}}

			<ul>

				{{/user_settings}}

			</div>

		</div>
